{
  "checks": {
    "nginx_http_port": {
      "command": "check-http.rb -u http://localhost:80",
      "subscribers": [
        "nginx"
      ],
      "handlers": [
        "remediator"
      ],
      "interval": 60,
      "playbook": "https://nginx.org/en/docs/",
      "occurrences": "2",
      "dependencies": "nginx_process",
      "remediation": {
        "remediate-nginx": {
          "occurrences": [
            1,
            3
          ],
          "severities": [
            2
          ]
        }
      },
      "trigger_on": "nginx"
    }
  }
}
